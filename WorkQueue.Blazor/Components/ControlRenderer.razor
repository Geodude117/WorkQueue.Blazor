@using DomainData.Models.ViewModels
@using DomainData.Models.UIModels
@using DomainData.Models.QuestionModels

@if (domainInfoViewModel.DomainType.TypeName == CustomType.StringType.ToString())
{
    if (domainInfoViewModel.DomainType.ClassObject == RendererTypes.SwitchQuestionRenderer.ToString())
    {
        <WorkQueue.Blazor.Renderers.SwitchQuestionRenderer Question="(TextQuestion)domainInfoViewModel.TextQuestion">
        </WorkQueue.Blazor.Renderers.SwitchQuestionRenderer>
    }
    else if (domainInfoViewModel.DomainType.ClassObject == RendererTypes.TextAreaQuestionRenderer.ToString())
    {
        <WorkQueue.Blazor.Renderers.TextAreaQuestionRenderer Question="(TextQuestion)domainInfoViewModel.TextQuestion"> </WorkQueue.Blazor.Renderers.TextAreaQuestionRenderer>
    }
    else
